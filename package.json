{
  "name": "@namics/stylelint-bem",
  "version": "8.1.0",
  "description": "A stylelint plugin for the Namics BEM definitions",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "npx -y rimraf package-lock.json node_modules",
    "lint": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npx -y pkg-ok@2.3.1",
    "pretest": "npm run lint",
    "test": "jest",
    "update-dependencies": "npm-check-updates -u --deprecated"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/merkle-open/stylelint-bem.git"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "css",
    "nesting",
    "linter",
    "bem"
  ],
  "author": "Merkle Inc.",
  "license": "MIT",
  "dependencies": {
    "css-selector-parser": "1.4.1",
    "postcss-resolve-nested-selector": "0.1.1"
  },
  "peerDependencies": {
    "stylelint": ">=7.0.0 <16.0.0"
  },
  "devDependencies": {
    "@merkle-open/eslint-config": "3.0.0",
    "eslint": "8.48.0",
    "eslint-plugin-import": "2.28.1",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "jest-preset-stylelint": "6.2.0",
    "lint-staged": "14.0.1",
    "npm-check-updates": "16.13.2",
    "stylelint": "15.10.3"
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  }
}
