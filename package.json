{
  "name": "@namics/stylelint-bem",
  "version": "8.0.0",
  "description": "A stylelint plugin for the Namics BEM definitions",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "npx -y rimraf package-lock.json node_modules",
    "lint": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npx -y pkg-ok@2.3.1",
    "pretest": "npm run lint",
    "test": "jest",
    "update-dependencies": "npm-check-updates -u"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/merkle-open/stylelint-bem.git"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "css",
    "nesting",
    "linter",
    "bem"
  ],
  "author": "Merkle Inc.",
  "license": "MIT",
  "dependencies": {
    "css-selector-classes": "0.1.2",
    "postcss-resolve-nested-selector": "0.1.1"
  },
  "peerDependencies": {
    "stylelint": ">=7.0.0 <15.0.0"
  },
  "devDependencies": {
    "@namics/eslint-config": "9.1.1",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-preset-stylelint": "6.0.0",
    "lint-staged": "13.0.4",
    "npm-check-updates": "16.4.3",
    "stylelint": "14.15.0"
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  }
}
